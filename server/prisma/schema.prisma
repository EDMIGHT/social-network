generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  login        String   @unique
  img          String
  name         String?
  email        String?
  password     String
  createdAt    DateTime @default(now())
  likedPosts   Post[]   @relation("liked posts")
  createdPosts Post[]   @relation("created posts")
  Token        Token[]

  following User[] @relation("follow")
  followers User[] @relation("follow")

  @@index([login])
}

model Post {
  id         String    @id @default(uuid())
  text       String?
  img        String?
  viewsCount Int       @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?

  user    User   @relation("created posts", fields: [userId], references: [id])
  userId  String
  likedBy User[] @relation("liked posts")
  tags    Tag[]
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  posts Post[]
}

model Token {
  userId       String    @id @unique
  refreshToken String    @db.VarChar(255)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?

  user User @relation(fields: [userId], references: [id])
}
